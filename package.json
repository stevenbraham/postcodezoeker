{
    "name": "postcodezoeker",
    "version": "1.0.0",
    "description": "Nederlandse gemeentes vinden op basis van postcode / Find municipalities in the Netherlands with a postal code",
    "main": "index.html",
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "lint": "eslint --fix src/js/**",
        "format": "prettier --config .prettierrc 'src/js/*.ts' package.json --write",
        "prepare": "husky install"
    },
    "repository": "git+https://github.com/stevenbraham/postcodezoeker.git",
    "private": true,
    "keywords": [
        "postcode",
        "gemeentes",
        "nederland",
        "netherlands",
        "postal",
        "code"
    ],
    "author": "Steven Braham <steven@braham.biz>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/stevenbraham/postcodezoeker/issues"
    },
    "homepage": "https://github.com/stevenbraham/postcodezoeker#readme",
    "dependencies": {
        "metro": "git+https://github.com/olton/Metro-UI-CSS.git#48c604abb064da1d945e9e7438a3902ccf7184c4"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.16.4",
        "@babel/preset-typescript": "^7.16.0",
        "@tsconfig/node14": "^1.0.1",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.3.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-airbnb-typescript": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-prettier": "^4.0.0",
        "espree": "^7.3.1",
        "husky": "^7.0.4",
        "laravel-mix": "^6.0.39",
        "laravel-mix-purgecss": "^6.0.0",
        "postcss": "^8.4.20",
        "prettier": "^2.4.1",
        "pretty-quick": "^3.1.1",
        "resolve-url-loader": "^4.0.0",
        "sass": "^1.26.11",
        "sass-loader": "^12.3.0",
        "ts-loader": "^9.2.6",
        "typescript": "^4.0.3",
        "webpack": "^5.64.0"
    }
}
